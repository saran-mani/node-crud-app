            <script>// Example starter JavaScript for disabling form submissions if there are invalid fields
                (() => {
                    'use strict'

                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    const forms = document.querySelectorAll('.validated-form')

                    // Loop over them and prevent submission
                    Array.from(forms).forEach(form => {
                        form.addEventListener('submit', event => {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }

                            form.classList.add('was-validated')
                        }, false)
                    })
                })()
                const searchInput = document.getElementById('searchInput');
                const bookContainers = document.querySelectorAll('.border');

                searchInput.addEventListener('input', function () {
                    const searchQuery = searchInput.value.toLowerCase();

                    bookContainers.forEach(function (container) {
                        const bookTitle = container.querySelector('h3').textContent.toLowerCase();

                        // Check if the book title contains the search query
                        if (bookTitle.includes(searchQuery)) {
                            container.style.display = 'block';
                        } else {
                            container.style.display = 'none';
                        }
                    });
                });

            </script>
</body>

